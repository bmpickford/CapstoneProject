<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.capstone.app.Course.CourseBadges">

    <ProgressBar
        android:id="@+id/badges_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/badges_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge_gpa_sem"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    card_view:srcCompat="@drawable/badge_gs_s" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="GPA Semester Increase"
                    android:textAppearance="@style/TextAppearance.Design.Tab" />

                <CheckedTextView
                    android:id="@+id/gpaSTextView1"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:clickable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="One Semester"/>

                <CheckedTextView
                    android:id="@+id/gpaSTextView2"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:contentDescription="Checked if ..."
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Semesters" />

                <CheckedTextView
                    android:id="@+id/gpaSTextView3"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Three Semesters" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge_gpa_year"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    card_view:srcCompat="@drawable/badge_gy_g" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="GPA Yearly Increase"
                    android:textAppearance="@style/TextAppearance.Design.Tab" />

                <CheckedTextView
                    android:id="@+id/gpaYTextView1"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:clickable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="One Year" />

                <CheckedTextView
                    android:id="@+id/gpaYTextView2"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:contentDescription="Checked if ..."
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Years" />

                <CheckedTextView
                    android:id="@+id/gpaYTextView3"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Three Years" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge_goals"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    card_view:srcCompat="@drawable/badge_g_b" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Goal Completion"
                    android:textAppearance="@style/TextAppearance.Design.Tab" />

                <CheckedTextView
                    android:id="@+id/goalTextView1"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:clickable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Three Goals" />

                <CheckedTextView
                    android:id="@+id/goalTextView2"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:contentDescription="Checked if ..."
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Six Goals" />

                <CheckedTextView
                    android:id="@+id/goalTextView3"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ten Goals" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge_blackboard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    card_view:srcCompat="@drawable/badge_bl_s" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Blackboard Interaction"
                    android:textAppearance="@style/TextAppearance.Design.Tab" />

                <CheckedTextView
                    android:id="@+id/blackboardTextView1"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:clickable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Three Weeks" />

                <CheckedTextView
                    android:id="@+id/blackboardTextView2"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:contentDescription="Checked if ..."
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Six Weeks" />

                <CheckedTextView
                    android:id="@+id/blackboardTextView3"
                    style="@style/checkedThemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:checkMark="@drawable/badge"
                    android:checked="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Twelve Weeks" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
